// 设置相关变量

shadow-color = rgba(0,0,0,0.2);
shadow-hover-color = rgba(0,0,0,0.28);
first-text-color = #484848;
second-text-color = #4c4c4c;
third-text-color = #858585;
default-text-color = #505050;
link-color = #000000;
second-link-color = #4F9BFA;
background-color = #FFFFFE


html,body{
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
}
nav{
    // display: none; // This is just for test
}
.text-center{
    text-align: center!important;
}
.middle-center{
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    height: 100%;
}

/* Page Style */
#page-main{
    margin: 0;
    padding: 0;
}
#index-banner{
    top: -80.72px!important;
    z-index: 0;
    top: 0px;
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
    cursor: default;
    overflow-wrap: break-word;
    margin: 0!important;
}

a {
    color: #007bff;
    text-decoration: none;
    background-color: transparent;
}
a:hover{
    color: second-link-color;
}
/* 响应式判断页面尺寸 */
.main-content,.post-card-main{
    margin: 30px;
}

@media (min-width: 576px){
    .main-content,.post-card-main{
        margin: 45px;
    }
}
@media (min-width: 768px){
    .main-content,.post-card-main{
        margin: 55px;
    }
}
@media (min-width: 992px){
    .main-content,.post-card-main{
        margin: 4%;
    }
}
@media (min-width: 1300px){
    .main-content,.post-card-main{
        margin: 6%;
    }
}

@media (max-width: 780px){ 
    h3{
        font-size: 1.4rem;
        line-height: 1.5em;
    }
}

@media (min-width: 780px){ 
    h3{
        font-size: 1.5rem;
        line-height: 1.5em;
    }
}
@media (min-width: 1280px){ 
    h3{
        font-size: 1.7rem;
        line-height: 1.5em;
    }
}
@media (min-width: 2096px){ 
    h3{
        font-size: 1.8rem;
        line-height: 1.5em;
    }
}

/* 
---
index style
--- 
*/
#index-banner .typed-cursor{
    font-size: 2rem;
    line-height: 1.5em;
    color: first-text-color;
}
#index-banner h1{
    font-size: 4rem;
    line-height: 1.85em;
    
}
#index-banner h3{
    font-size: 2rem;
    line-height: 1.5em;
    color: first-text-color;
}

.index-card{
    box-shadow: 2px 2px 6px shadow-color;

    a{
        color: first-text-color;
    }
    a:hover{
        color: second-link-color;
    }
    padding: 28px;
    margin-bottom: 38px;
    padding-top: 5px; 
}


.index-card:hover{
    box-shadow: 2px 2px 6px shadow-hover-color;
}
.post-card-main{
    max-width: 920px;
    position: relative;
    width: 100%;
}
.post-card-center{
    width: 100%;
    display: flex;
    justify-content: center;
    padding-top: 30px;
}
.index-pin{
    position: absolute;
    top: 10px;
    right: 12px;
    font-size: 1.2rem;
    transform: rotate(45deg);
    color: third-text-color;
}
footer{
    margin: 0;
    padding: 0;
    color: second-text-color;
    padding: 5px;
}
/* 
---
post style
--- 
*/
h1{
    font-size: 1.9rem;
}
h2{
    font-size: 1.75rem;
}
h3{
    font-size: 1.55rem;
}
h4{
    font-size: 1.45rem;
}
h5{
    font-size: 1.35rem;
}
h6{
    font-size: 1.25rem;
}
p{
    font-size: 1.2rem;
}
@media (max-width: 500px){
    h1{
        font-size: 1.8rem;
    }
    h2{
        font-size: 1.6rem;
    }
    h3{
        font-size: 1.5rem;
    }
    h4{
        font-size: 1.4rem;
    }
    h5{
        font-size: 1.3rem;
    }
    h6{
        font-size: 1.25rem;
    }
    p{
        font-size: 1.1rem;
    }
}
#page-banner{
    word-break:break-all;
    // filter: brightness(.8);
}

#page-banner h3{
    font-size: 2rem;
    line-height: 1.5em;
    color: first-text-color;
}
.slogan-white{
    color: #fff!important;
}
@media (max-width: 425px){
    #article,#post-meta,#miracle-comments{
        width: 100%!important;
        margin-left: 10px!important;
        margin-right: 10px!important;

    }
    
}
@media (min-width: 768px){
    #article,#post-meta,#miracle-comments{
        max-width: 720px;
    }
}
@media (min-width: 992px){
    #article,#post-meta,#miracle-comments{
        max-width: 960px;
    }
}


#article{
    position: relative;
    box-sizing: border-box;
    width: 80%;
    height: 100%;
    transition: all 0.3s ease;
    box-shadow: 2px 2px 6px shadow-color;
    padding: 30px;
    border-radius: 5px;
    box-sizing: border-box;
    margin-bottom: 30px;
    border-radius: 0.5rem;
    // margin-top: -4rem;
    background-color: background-color;
}
#post-meta-m{
    z-index: 3;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    justify-content: center;
    padding-top: 30px;
}
#post-meta{
    text-align: center;
    position: relative;
    box-sizing: border-box;
    width: 80%;
    height: 100%;
    transition: all 0.3s ease;
    box-shadow: 2px 2px 6px shadow-color;
    padding-left: 30px;
    padding-right: 30px;
    padding-bottom: 20px;
    border-radius: 5px;
    box-sizing: border-box;
    border-radius: 0.5rem;
    background-color: background-color;
}
#post-meta{
    color: first-text-color;
    margin-top: 1rem!important;
}
.article-m{
    z-index: 3;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 30px 0;
}
.ml-10{
    margin-left: 10px;
}
.meta-icon{
    font-size: 0.9rem!important;
}
#miracle-comments{
    text-align: center;
    position: relative;
    box-sizing: border-box;
    width: 80%;
    height: 100%;
    transition: all 0.3s ease;
    box-shadow: 2px 2px 6px shadow-color;
    padding-left: 30px;
    padding-right: 30px;
    padding-top: 20px;
    padding-bottom: 20px;
    border-radius: 5px;
    box-sizing: border-box;
    border-radius: 0.5rem;
    background-color: background-color;
}
.comments{
    z-index: 3;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    justify-content: center;
    padding-top: 30px;
    padding-bottom: 30px;
}

/* 
---
NavBar
--- 
*/
@import "_include/nav"
.mg-top{
    margin-top: 80.72px
}

/* 
---
Footer
--- 
*/
footer p{
    font-size: 1rem;
}
.pagination .page-number,.next,.prev{

}
.pagination .current:hover, .pagination a:hover {
    background-color: #f8f9fa;
}
.pagination .current, .pagination a {
    outline: 0;
    border: 0;
    background-color: transparent;
    font-size: .9rem;
    padding: .5rem .75rem;
    line-height: 1.25;
    border-radius: .125rem;
    transition: background-color .2s ease-in-out;
}
.pagination {
    display: -ms-flexbox;
    display: flex;
    padding-left: 0;
    list-style: none;
    border-radius: .25rem;
    width: 100%;
    display: flex;
    justify-content: center;
}
#page-banner{
    word-break:break-all;
    // filter: brightness(.8);
}

#page-banner h3{
    font-size: 2rem;
    line-height: 1.5em;
    color: var(--first-text-color);
}
.slogan-white{
    color: #fff!important;
}
@media (max-width: 425px){
    #article,#post-meta,#miracle-comments,.tagcloud,.list-group,.category-list-content{
        width: 100%!important;
        margin-left: 10px!important;
        margin-right: 10px!important;

    }
    
}
@media (min-width: 768px){
    #article,#post-meta,#miracle-comments,.tagcloud,.list-group,.category-list-content{
        max-width: 720px;
    }
}
@media (min-width: 992px){
    #article,#post-meta,#miracle-comments,.tagcloud,.list-group,.category-list-content{
        max-width: 960px;
    }
}


#article{
    position: relative;
    box-sizing: border-box;
    width: 80%;
    height: 100%;
    transition: all 0.3s ease;
    box-shadow: 2px 2px 6px var(--shadow-color);
    padding: 30px;
    border-radius: 5px;
    box-sizing: border-box;
    margin-bottom: 30px;
    border-radius: 0.5rem;
    background-color: var(--post-bkg-color);
    color: var(--second-text-color);
}
#post-meta-m{
    z-index: 3;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    justify-content: center;
    padding-top: 30px;
}
#post-meta{
    text-align: center;
    position: relative;
    box-sizing: border-box;
    width: 80%;
    height: 100%;
    transition: all 0.3s ease;
    box-shadow: 2px 2px 6px var(--shadow-color);
    padding-left: 30px;
    padding-right: 30px;
    padding-bottom: 20px;
    border-radius: 5px;
    box-sizing: border-box;
    border-radius: 0.5rem;
    background-color: var(--post-bkg-color);
}
#post-meta{
    color: var(--second-text-color);
    margin-top: 1rem!important;
}
.article-m{
    z-index: 3;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 30px 0;
}
.ml-10{
    margin-left: 10px;
}
.meta-icon{
    font-size: 0.9rem!important;
}
#miracle-comments{
    text-align: center;
    position: relative;
    box-sizing: border-box;
    width: 80%;
    height: 100%;
    transition: all 0.3s ease;
    box-shadow: 2px 2px 6px var(--shadow-color);
    padding-left: 30px;
    padding-right: 30px;
    padding-top: 20px;
    padding-bottom: 20px;
    border-radius: 5px;
    box-sizing: border-box;
    border-radius: 0.5rem;
    background-color: var(--post-bkg-color);
    color: var(--second-text-color)
}
.comments{
    background-color: var(--post-bkg-color);
    z-index: 3;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    justify-content: center;
    padding-top: 30px;
    padding-bottom: 30px;
}
.tag-page-main span{
    color: var(--third-text-color)
}
#page-main{
    margin: 0;
    padding: 0;
}
#index-banner{
    top: -80.72px!important;
    z-index: 0;
    top: 0px;
    width: 100%;
    height: 100%;
    position: relative;
    overflow: hidden;
    cursor: default;
    overflow-wrap: break-word;
    margin: 0!important;
}

a {
    color: var(--default-link-color);
    text-decoration: none;
    background-color: transparent;
}
a:hover{
    color: var(--second-link-color);
}
/* 响应式判断页面尺寸 */
.main-content,.post-card-main{
    margin: 30px;
}

@media (min-width: 576px){
    .main-content,.post-card-main{
        margin: 45px;
    }
}
@media (min-width: 768px){
    .main-content,.post-card-main{
        margin: 55px;
    }
}
@media (min-width: 992px){
    .main-content,.post-card-main{
        margin: 4%;
    }
}
@media (min-width: 1300px){
    .main-content,.post-card-main{
        margin: 6%;
    }
}

@media (max-width: 780px){ 
    h3{
        font-size: 1.4rem;
        line-height: 1.5em;
    }
}

@media (min-width: 780px){ 
    h3{
        font-size: 1.5rem;
        line-height: 1.5em;
    }
}
@media (min-width: 1280px){ 
    h3{
        font-size: 1.7rem;
        line-height: 1.5em;
    }
}
@media (min-width: 2096px){ 
    h3{
        font-size: 1.8rem;
        line-height: 1.5em;
    }
}

.tag-page-main{
    z-index: 3;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    justify-content: center;
    padding-top: 30px;
}

.tagcloud{
    color: #484848;
    margin-top: 1rem !important;
    text-align: center;
    position: relative;
    box-sizing: border-box;
    width: 80%;
    height: 100%;
    transition: all .3s ease;
    box-shadow: 2px 2px 6px rgba(0,0,0,0.2);
    padding-top: 20px;
    padding-left: 30px;
    padding-right: 30px;
    padding-bottom: 20px;
    border-radius: 5px;
    box-sizing: border-box;
    border-radius: .5rem;
    background-color: var(--post-bkg-color);
}

.list-page-main{
    z-index: 3;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    justify-content: center;
    padding-top: 30px;
}

.list-group{
    color: #484848;
    margin-top: 1rem !important;
    position: relative;
    box-sizing: border-box;
    width: 80%;
    height: 100%;
    transition: all .3s ease;
    box-shadow: 2px 2px 6px rgba(0,0,0,0.2);
    padding-top: 20px;
    padding-left: 30px;
    padding-right: 30px;
    padding-bottom: 20px;
    border-radius: 5px;
    box-sizing: border-box;
    border-radius: .5rem;
    background-color: var(--post-bkg-color);
}
.list-group-item {
    border: 0;
    position: relative;
    display: block;
    padding: .75rem 1.25rem;
}
.category-list-content{
    color: #484848;
    margin-top: 1rem !important;
    position: relative;
    box-sizing: border-box;
    width: 80%;
    height: 100%;
    transition: all .3s ease;
    box-shadow: 2px 2px 6px rgba(0,0,0,0.2);
    padding-top: 20px;
    padding-left: 30px;
    padding-right: 30px;
    padding-bottom: 20px;
    border-radius: 5px;
    box-sizing: border-box;
    border-radius: .5rem;
    background-color: var(--post-bkg-color);
}
.category-list-content ul{
    list-style: none;
}
.all-category-list-count{
    float: right;
}
.all-category-list-count:before{
    content: "( ";
}
.all-category-list-count:after{
    content: " )"
}
.tag-page-main span,time{
    color: var(--second-text-color)
}
#page-main{
    margin: 0;
    padding: 0;
}
#index-banner{
    z-index: 0;
    top: 0px;
    width: 100%;
    position: relative;
    overflow: hidden;
    cursor: default;
    overflow-wrap: break-word;
    margin: 0!important;
}

a {
    color: var(--default-link-color);
    text-decoration: none;
    background-color: transparent;
}
a:hover{
    color: var(--second-link-color);
}
/* 响应式判断页面尺寸 */
.main-content,.post-card-main{
    margin: 30px;
}

@media (min-width: 576px){
    .main-content,.post-card-main{
        margin: 45px;
    }
}
@media (min-width: 768px){
    .main-content,.post-card-main{
        margin: 55px;
    }
}
@media (min-width: 992px){
    .main-content,.post-card-main{
        margin: 4%;
    }
}
@media (min-width: 1300px){
    .main-content,.post-card-main{
        margin: 4% 6%;
    }
}

@media (max-width: 780px){ 
    h3{
        font-size: 1.4rem;
        line-height: 1.5em;
    }
}

@media (min-width: 780px){ 
    h3{
        font-size: 1.5rem;
        line-height: 1.5em;
    }
}
@media (min-width: 1280px){ 
    h3{
        font-size: 1.7rem;
        line-height: 1.5em;
    }
}
@media (min-width: 2096px){ 
    h3{
        font-size: 1.8rem;
        line-height: 1.5em;
    }
}

.tag-page-main{
    z-index: 3;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    justify-content: center;
    padding-top: 30px;
}

.tagcloud{
    color: var(--first-text-color)
    margin-top: 1rem !important;
    text-align: center;
    position: relative;
    box-sizing: border-box;
    width: 80%;
    height: 100%;
    transition: all .3s ease;
    box-shadow: 2px 2px 6px rgba(0,0,0,0.2);
    padding-top: 20px;
    padding-left: 30px;
    padding-right: 30px;
    padding-bottom: 20px;
    border-radius: 5px;
    box-sizing: border-box;
    border-radius: .5rem;
    background-color: var(--post-bkg-color);
}

.list-page-main{
    z-index: 3;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    justify-content: center;
    padding-top: 30px;
}

.list-group{
    color: var(--first-text-color)
    margin-top: 1rem !important;
    position: relative;
    box-sizing: border-box;
    width: 80%;
    height: 100%;
    transition: all .3s ease;
    box-shadow: 2px 2px 6px rgba(0,0,0,0.2);
    padding-top: 20px;
    padding-left: 30px;
    padding-right: 30px;
    padding-bottom: 20px;
    border-radius: 5px;
    box-sizing: border-box;
    border-radius: .5rem;
    background-color: var(--post-bkg-color);
}
.list-group-item {
    border: 0;
    position: relative;
    display: block;
    padding: .75rem 1.25rem;
}
.category-list-content{
    color: var(--first-text-color)
    margin-top: 1rem !important;
    position: relative;
    box-sizing: border-box;
    width: 80%;
    height: 100%;
    transition: all .3s ease;
    box-shadow: 2px 2px 6px rgba(0,0,0,0.2);
    padding-top: 20px;
    padding-left: 30px;
    padding-right: 30px;
    padding-bottom: 20px;
    border-radius: 5px;
    box-sizing: border-box;
    border-radius: .5rem;
    background-color: var(--post-bkg-color);
}
.category-list-content ul{
    list-style: none;
}
.all-category-list-count{
    float: right;
}
.all-category-list-count:before{
    content: "( ";
}
.all-category-list-count:after{
    content: " )"
}
#modalSearch{
    top: 0px;
    width: 100%;
    height 100%;
    position: fixed;
    z-index: 99999;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    padding-top: 30px;
    backdrop-filter: blur(30px);
	-webkit-backdrop-filter: blur(30px);
    // background-color:rgb(192,192,192,0.3);
    transition: opacity .15s linear;
}
#local-search-result{
    width: 75%;
    .search-list-content {
        padding: 0 1.25rem;
    }
    .search-list-title {
        border-left: 3px solid #0d47a1;
    }
    margin-left: 0!important;
    margin-right: 0!important;
}
#searchDocument{
    position: relative;
    box-sizing: border-box;
    width: 80%;
    height: 100%;
    transition: all 0.3s ease;
    padding: 30px;
    border-radius: 0.5rem;
    color: var(--second-text-color);
}
.md-form,.list-group-m{
    display: flex;
    justify-content: center;
}
.md-form{
    height: 40px;
}
.md-form input{
    color: var(--second-text-color);
    border-radius: 3px;
    border: 1px solid rgb(230,230,230);
    padding: .4em .6em;
    background-color: var(--post-bkg-color);
}
#local-search-close{
    position: fixed;
    top: 1px;
    right: 1px;
    float right;
    border-radius: 3px;
    padding: .4em .6em;
    border: none;
    width: 35px;
    height 35px;
    background-color: var(--page-bkg-color);
}
#local-search-close .meta-icon{
    color: var(--second-text-color);
}
.links-page-m{
    z-index: 3;
    box-sizing: border-box;
    width: 100%;
    display: flex;
    justify-content: center;
    padding-top: 30px;
}
.links-page{
    position: relative;
    box-sizing: border-box;
    width: 80%;
    height: 100%;
    transition: all 0.3s ease;
    box-shadow: 2px 2px 6px var(--shadow-color);
    padding: 30px;
    border-radius: 5px;
    margin-bottom: 30px;
    border-radius: 0.5rem;
    background-color: var(--post-bkg-color);
    color: var(--second-text-color);
}
.links-card{
    box-shadow: none;
    min-width: 33%;
    background-color: transparent;
    border: 0;
}
.links-card:hover{
    background-color: var(--sec-shadow);
}
.links-card-body{
    margin: 1rem 0;
    padding: 1rem;
    border-radius: 0.3rem;
    display: block;
    width: 100%;
    height: 100%;
}
.links-card-content {
    display: flex;
    flex-wrap: nowrap;
    width: 100%;
    height: 3.5rem;
}
.link-avatar {
    flex: none;
    width: 3rem;
    height: 3rem;
    margin-right: 0.75rem;
    object-fit: cover;
    transition-duration: 0.2s;
    transition-timing-function: ease-in-out;
}
.link-avatar img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    -moz-border-radius: 50%;
    -webkit-border-radius: 50%;
    object-fit: cover;
}
.link-text {
    flex: 1;
    display: grid;
    flex-direction: column;
}
.link-title {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: var(--first-text-color);
    font-weight: bold;
}
.link-intro {
    max-height: 2rem;
    font-size: 0.85rem;
    line-height: 1.2;
    color: var(--first-text-color);
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    overflow: hidden;
}